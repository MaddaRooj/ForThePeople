            </div>
            <div class="form-group">
                <input hidden asp-for="ApplicationUserId" class="form-control" />
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="RepId" class="form-control" />
                <span asp-validation-for="RepId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="LegislationId" class="form-control" />
                <span asp-validation-for="LegislationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
